<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:background="#FFFFFF" android:scrollbars="vertical">
	<ImageView android:id="@+id/imageView1" android:layout_height="wrap_content" android:src="@drawable/top_actu" android:layout_width="fill_parent" android:background="#1a85bb"></ImageView>
	<ScrollView android:layout_width="fill_parent" android:id="@+id/scrollView1" android:layout_height="fill_parent">
		<LinearLayout 
			android:id="@+id/linearLayout1" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			android:background="#FFFFFF" android:orientation="vertical">
			<ImageView android:layout_width="fill_parent" android:id="@+id/imageView" android:src="@drawable/icon" android:layout_gravity="center" android:layout_height="wrap_content"></ImageView>
			<TextView android:textColor="#1a85bb" android:layout_height="wrap_content" android:textStyle="bold" android:text="titre actu" android:id="@+id/titre" android:layout_width="wrap_content"></TextView>
			<TextView android:textColor="#000000" android:layout_height="fill_parent" android:text="test activity" android:id="@+id/description" android:layout_width="fill_parent"></TextView>
		</LinearLayout>
	</ScrollView>
    
</LinearLayout>
